[Unit]
Description="Request media to be downloaded with radarr or sonarr"

[Container]
Image=ghcr.io/hotio/jellyseerr:release-2.7.3
ContainerName=jellyseerr
Pod=starrapps.pod

# Environment variables
Environment=PUID={{ starrapps_user_id }}
Environment=PGID={{ starrapps_group_id }}
Environment=TZ={{ starrapps_timezone }}

# Volumes
Volume={{ starrapps_jellyseerr_config_dir }}:/config:z

[Service]
TimeoutStartSec=900
