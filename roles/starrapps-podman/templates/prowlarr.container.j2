[Unit]
Description="Indexer manager"

[Container]
Image=ghcr.io/hotio/prowlarr:release-2.1.5.5216
ContainerName=prowlarr
Pod=starrapps.pod

# Environment variables
Environment=PUID={{ starrapps_user_id }}
Environment=PGID={{ starrapps_group_id }}
Environment=TZ={{ starrapps_timezone }}

# Volumes
Volume={{ starrapps_prowlarr_config_dir }}:/config:z

[Install]
# Start by default on boot
WantedBy=default.target

[Service]
TimeoutStartSec=900
